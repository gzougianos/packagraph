{
  "includeOnlyFromDirectories": false,
  "directories": [
    "src/main/java",
    "src/test/java"
  ],
  "definitions": [
    {
      "packages": "java.util.*",
      "as": "java",
      "style": {
        "fillcolor": "green",
        "inheritGlobal": true
      },
      "edgeInStyle": {
        "style": "solid",
        "color": "red"
      }
    },
    {
      "packages": "com.github.com",
      "as": "",
      "style": {
        "fillcolor": "blue",
        "inheritGlobal": false
      },
      "edgeInStyle": {
        "inheritGlobal": false,
        "color": "green"
      }
    },
    {
      "packages": "com.something\\.(.*)",
      "as": "$1"
    }
  ],
  "outputImage": {
    "path": "target/packagraph.png",
    "overwrite": true
  },
  "globalStyle": {
    "shape": "rectangle",
    "style": "rounded",
    "fillcolor": "lightblue",
    "color": "black",
    "fontcolor": "black",
    "fontsize": 10,
    "fontname": "Arial",
    "width": 1,
    "height": 1,
    "fixedsize": true,
    "tooltip": "tooltip",
    "url": "url",
    "target": "target",
    "layer": 1,
    "group": "group",
    "rank": "same",
    "sides": 4,
    "peripheries": 1
  },
  "globalEdgeStyle": {
    "label": "Sample Edge",
    "color": "blue",
    "style": "dashed",
    "weight": 2,
    "penwidth": 1.5,
    "arrowhead": "diamond",
    "arrowsize": 1.2,
    "dir": "both",
    "constraint": true,
    "fontsize": 12,
    "fontcolor": "black",
    "decorate": true,
    "url": "https://example.com"
  }
}