{
  "includeOnlyFromDirectories": false,
  "directories": [
    "./src/main/java"
  ],
  "definitions": [
    {
      "packages": "com.github.gzougianos\\.(.*)",
      "as": "$1"
    },
    {
      "packages": "java.*,lombok.*",
      "as": ""
    },
    {
      "packages": "com.github.javaparser.*",
      "as": "JavaParser",
      "style": {
        "color": "blue",
        "inheritGlobal": false
      }
    },
    {
      "packages": "guru.nidi.*",
      "as": "Graphviz",
      "style": {
        "style": "filled",
        "fillcolor": "green"
      },
      "edgeInStyle": {
        "style": "solid",
        "color": "green"
      }
    }
  ],
  "clusters": [
    {
      "packages": "packagraph.*",
      "name": "Packagraph"
    }
  ],
  "globalStyle": {
    "fontsize": 20,
    "shape": "box"
  },
  "globalEdgeStyle": {
    "color": "#0000FF",
    "style": "dashed",
    "weight": 1
  },
  "outputImage": {
    "path": "./packagraph.png",
    "overwrite": true
  }
}