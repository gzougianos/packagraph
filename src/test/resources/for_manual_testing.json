{
  "includeOnlyFromDirectories": false,
  "directories": [
    "./src/main/java"
  ],
  "definitions": [
    {
      "packages": "com.github.gzougianos\\.(.*)",
      "as": "$1"
    },
    {
      "packages": "java.*,lombok.*",
      "as": ""
    },
    {
      "packages": "com.github.javaparser.*",
      "as": "JavaParser",
      "style": {
        "color": "blue",
        "inheritGlobal": false
      }
    },
    {
      "packages": "guru.nidi.*",
      "as": "Graphviz",
      "style": {
        "style": "filled",
        "fillcolor": "green"
      },
      "edgeInStyle": {
        "style": "solid",
        "color": "green"
      }
    }
  ],
  "clusters": [
    {
      "packages": "${PACKAGRAPH_PACKAGE_PATTERN}",
      "name": "Packagraph",
      "style": {
        "color": "red",
        "label": "PackgraphInternals",
        "fontsize": 18,
        "fontcolor": "lightblue",
        "labeljust": "l"
      }
    }
  ],
  "globalStyle": {
    "fontsize": 20,
    "shape": "box"
  },
  "globalEdgeStyle": {
    "color": "${BLUE}",
    "style": "dashed",
    "weight": 1
  },
  "constants": [
    {
      "name": "BLUE",
      "value": "#0000FF"
    },
    {
      "name": "PACKAGRAPH_PACKAGE_PATTERN",
      "value": "packagraph.*"
    }
  ],
  "textcolor": "${BLUE}",
  "output": {
    "path": "./packagraph.png",
    "overwrite": true,
    "style": {
      "label": "ManualTesting",
      "fontsize": 24,
      "fontname": "Tahoma",
      "fontcolor": "purple",
      "labeljust": "r"
    }
  }
}